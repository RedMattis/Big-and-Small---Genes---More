<Defs>
  <GeneDef ParentName="GeneNoseBase">
    <defName>BS_TrollNose</defName>
    <label>troll nose</label>
    <description>Carriers of this gene have a big nose.</description>
    <iconPath>Xenotypes/BS_Troll</iconPath>
    <renderNodeProperties>
      <li>
        <nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
        <workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
        <texPath>BS_HeadAttachments/BS_TrollNose</texPath>
        <narrowCrownHorizontalOffset>0.03</narrowCrownHorizontalOffset>
        <useSkinShader>true</useSkinShader>
        <useRottenColor>true</useRottenColor>
        <colorType>Skin</colorType>
        <parentTagDef>Head</parentTagDef>
        <rotDrawMode>Fresh, Rotting</rotDrawMode>
        <visibleFacing>
          <li>East</li>
          <li>South</li>
          <li>West</li>
        </visibleFacing>
        <drawData>
          <defaultData>
            <layer>66</layer>
          </defaultData>
        </drawData>
      </li>
    </renderNodeProperties>
    <missingGeneRomanceChanceFactor>0.5</missingGeneRomanceChanceFactor>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>410</displayOrderInCategory>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>big</symbol></li>
        <li><symbol>troll</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>nose</symbol></li>
      </suffixSymbols>
    </symbolPack>

    <selectionWeight>0.25</selectionWeight>
  </GeneDef>
</Defs>